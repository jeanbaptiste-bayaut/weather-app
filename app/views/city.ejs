<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather app</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/2f4c0e8957.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="card">
        <div class="search">
            <form method="POST">
            <input type="text" placeholder="enter city name" name="city" spellcheck="false">
            <button><i class="fa-solid fa-magnifying-glass fa-xl" style="color: #77797e;"></i></button>
            </form>
        </div>
        <div class="weather">
            <h2 class="city"><%= cityWeather.name %></h2>
            <i class="fa-solid <%= icon.icon %> weather-icon"></i>
            <p class="description"><%= cityWeather.weather[0].description %></p>
            <h1 class="temp"><%= Math.round(cityWeather.main.temp) %> °C</h1>
            <div class="temp-details">
                <p>min: <%= Math.round(cityWeather.main.temp_min) %> °C</p>
                <p>max: <%= Math.round(cityWeather.main.temp_max) %> °C</p>
            </div>

            <div class="details">
                <div class="col">
                    <i class="fa-solid fa-water fa-2xl"></i>
                    <div>
                        <p class="humidity"><%= cityWeather.main.humidity %>%</p>
                        <p>Humidity</p>
                    </div>
                </div>
                <div class="col">
                    <i class="fa-solid fa-wind fa-2xl"></i>
                    <div>
                        <p class="wind"><%= cityWeather.wind.speed %> km/h</p>
                        <p>Wind Speed</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>